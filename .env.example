# Environment Variables Configuration
# Copy this file to .env and fill in your values

# Scopus API Configuration (Default - users can add their own via UI)
SCOPUS_API_KEY=your_default_scopus_api_key_here
SCOPUS_BASE_URL=https://api.elsevier.com/content/search/scopus

# Application Settings
APP_NAME=Scopus Search API
APP_VERSION=3.0.0
APP_DESCRIPTION=REST API untuk searching paper dengan authentication dan wishlist
DEBUG=False

# Database Configuration (PostgreSQL from Heroku)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/scopus_db

# Redis Configuration (from Heroku Redis)
# Format: redis://host:port/db or rediss:// for SSL
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Security Configuration
# Generate SECRET_KEY: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-generate-with-secrets-module
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080
# Generate ENCRYPTION_KEY same way as SECRET_KEY
ENCRYPTION_KEY=your-encryption-key-here-for-api-keys

# CORS Settings (comma-separated for multiple origins)
# CORS_ORIGINS=http://localhost:3000,http://localhost:8080
# Use * to allow all origins (not recommended for production)
CORS_ORIGINS=*

# API Limits
MAX_RESULTS_PER_PAGE=25
MAX_TOTAL_RESULTS=1000
DEFAULT_LIMIT=25
REQUEST_TIMEOUT=30

# Static Files
STATIC_DIR=static
